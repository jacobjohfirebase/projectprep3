<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.examplemobileappcompany.projectprep3bleaidl.MainActivity">

  <TextView
      android:id="@+id/textView"
      android:textSize="50sp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="No Service Call Made"/>

  <Button
      android:id="@+id/button"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Call Service"
      android:onClick="callService"/>

    <Button
        android:id="@+id/bleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start BLE Scan"
        android:onClick="startScan"/>

</LinearLayout>
